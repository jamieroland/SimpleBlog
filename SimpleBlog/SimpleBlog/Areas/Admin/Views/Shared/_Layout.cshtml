
@{
    Layout = null;
}

@helper SelectedTabClass(string tabName) { 
    if (tabName == ViewBag.SelectedTab)
    {
        @: active
    }
}
<!DOCTYPE html>
@using System.Web.Optimization;
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>SimpleBlog Admin</title>
    @Styles.Render("~/admin/styles")
</head>
<body>
    <div class="container">
        <ul class="nav nav-pills">
            <li class="@SelectedTabClass("posts")">@Html.ActionLink("Posts", "Index", "Posts", new { area = "admin" }, new { })</li> <!--need to add that last new empty object to to satisfy the overload for the actionlink method...it isnt used anywhere-->
            <li class="@SelectedTabClass("users")">@Html.ActionLink("Users", "Index", "Users", new { area = "admin" }, new { })</li>
            <li class="pull-right">@Html.RouteLink("Back to Website", "Home")</li>
        </ul>
        <!-- insert view here!-->
        @RenderBody()
    </div>

    

    @Scripts.Render("~/admin/scripts")
    @RenderSection("Scripts", false)
</body>
</html>
